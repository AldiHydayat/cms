<%= f.hidden_field :question_id, value: question.id %>
<% question.options.each do |option| %>
  <div class="form-check">
    <%= f.check_box :option_id, { multiple: true, class: "form-check-input" }, option.id, nil %>
    <%= f.label :option_id, option.option_text, for: "user_answers_attributes_2_option_id_#{option.id}", class: "form-check-label" %>
  </div>
<% end %>